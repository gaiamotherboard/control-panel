# Copy to .env and fill values (DO NOT COMMIT .env)

# --- Postgres ---
POSTGRES_DB=control_panel
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_me

# If your Django settings uses DATABASE_URL, keep this in sync:
DATABASE_URL=postgresql://postgres:change_me@db:5432/control_panel

# --- Django ---
DJANGO_SECRET_KEY=change_me
DJANGO_DEBUG=0
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,192.168.122.251

# --- Auto-created admin user (created/updated on startup) ---
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=admin123

# --- App limits ---
MAX_LSHW_BYTES=5000000

# --- pgAdmin ---
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin123
